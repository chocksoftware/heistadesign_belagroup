<script type="x/template" id="vue-item-search">
    
        <form class="form-inline my-2 my-lg-0">
            <input type="search" class="form-control mr-sm-2" v-model="currentSearchString" @input="autocomplete($event.target.value)"
                @keyup.enter="prepareSearch()" @keyup.down="keydown()" @keyup.up="keyup()"
                @focus="isSearchFocused = true" @blur="setIsSearchFocused(false)"
                autofocus>
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit" @click="search()">
                
            </button>
           
        </form>
    
</script>